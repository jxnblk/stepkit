{
  "name": "stepkit",
  "version": "0.0.1",
  "description": "stepkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/jxnblk/stepkit.git"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jxnblk/stepkit/issues"
  },
  "homepage": "https://github.com/jxnblk/stepkit",
  "devDependencies": {
    "browserify": "^8.1.3",
    "bumpkit": "0.0.2",
    "envify": "^3.2.0",
    "geomicons-open": "0.0.4",
    "http-server": "^0.7.4",
    "lodash": "^3.2.0",
    "node-jsx": "^0.12.4",
    "parallelshell": "^1.0.4",
    "q": "^1.1.2",
    "query-string": "^1.0.0",
    "react": "^0.12.2",
    "reactify": "^1.0.0",
    "superagent": "^0.21.0",
    "uglify": "^0.1.1",
    "watch": "^0.14.0",
    "watchify": "^2.3.0"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "scripts": {
    "watchify": "watchify src/app.js -o js/app.js -t reactify",
    "uglify": "uglify js/app.js -o js/app.min.js",
    "watch:uglify": "watch 'npm run uglify -s' ./js",
    "build:js": "NODE_ENV=production browserify src/app.js -t envify -t reactify -o js/app.js",
    "build:html": "node src/build",
    "watch:html": "watch 'npm run build:html -s' ./src",
    "serve": "http-server",
    "start": "parallelshell 'npm run watchify -s' 'npm run watch:uglify -s' 'npm run watch:html -s' 'npm run serve -s'"
  },
  "config": {
    "loglevel": "warn"
  },
  "audio_path": "//jxnblk.s3.amazonaws.com/stepkit",
  "kits": [
    {
      "name": "Bedford",
      "path": "/bedford",
      "samples": [
        "kick.mp3",
        "snare.mp3",
        "rim.mp3",
        "hat.mp3",
        "bell.mp3",
        "stab01.mp3",
        "stab02.mp3",
        "stab03.mp3"
      ]
    },
    {
      "name": "Dusty",
      "path": "/dusty",
      "samples": [
        "kick.mp3",
        "snare.mp3",
        "clicks.mp3",
        "hat.mp3",
        "vocal-1.mp3",
        "vocal-2.mp3",
        "vocal-3.mp3",
        "vocal-4.mp3"
      ]
    },
    {
      "name": "Let Go",
      "path": "/let-go",
      "samples": [
        "kick.mp3",
        "snare.mp3",
        "stab-1.mp3",
        "hat.mp3",
        "stab-2.mp3",
        "stab-3.mp3",
        "stab-4.mp3",
        "stab-5.mp3"
      ]
    }
  ]
}
